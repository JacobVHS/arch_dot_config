# shell shortcuts
alias ls='ls --color=auto'
alias ll='ls -ltr'
alias l='ls -1'
alias c='clear'

# Directories
alias atomic='cd ~/atomic/'
alias ato='atomic'

# Git Commands
alias g='git'
alias gp='git push'
alias gc='git commit -m'
alias jacob='git branch jacob && git checkout jacob'

# Cat print text
alias cat='bat'
alias ccat='/bin/cat'
alias grep='grep --color=auto'

# Python Environments
alias devops='source ~/.devops/bin/activate'

# Search and open neovim
alias open='nvim $(fzf)'
alias vim="nvim"
alias fzf='fzf --preview "bat --color=always --style=numbers --line-range=:500 {}"'


# Take a screenshot of section
alias screenshot="grim -g \"\$(slurp)\" ~/Pictures/screenshot_$(date +\%Y-\%m-\%d_\%H-\%M-\%S).png"
alias view='feh'

alias code='vscodium'
